@{
    ViewData["Title"] = "Shopping Cart";
}
<div class="jumbotron">
    <h1>Shopping Cart</h1>
    @if (Model.CartItems.Count == 0)
    {
        <h3>Your cart is empty.</h3>
    }
    else
    {
        <ul>
            @foreach (var item in Model.CartItems)
            {
            <li>
                <h3><a href="/products/details/@item.ProductId">@item.ProductName</a></h3>
                <h5>@item.ProductDescription</h5>
                <h4>Q.ty: @item.Quantity, Item $ @item.CurrentPrice, Total $ @item.TotalPrice</h4>
                <h4>Shipping estimate: @item.DeliveryEstimate</h4>
                @if (@item.Inventory == 0)
                {
                    <h4>bummer! this is gone.</h4>
                }
                else
                {
                    <h4>@item.Inventory item(s) left in stock</h4>
                }
            </li>
            }
        </ul>
    }
</div>
